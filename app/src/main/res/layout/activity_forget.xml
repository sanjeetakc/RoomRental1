<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorusername"
    android:layout_height="match_parent"
    tools:context=".Forget">

    <ImageView
        android:id="@+id/forget_pwd_new_pwd"
        android:layout_width="299dp"
        android:layout_height="88dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.292"
        app:srcCompat="@drawable/createaccbar" />

    <ImageView
        android:id="@+id/forget_pwd_conform_new_pwd"
        android:layout_width="305dp"
        android:layout_height="76dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forget_pwd_new_pwd"
        app:srcCompat="@drawable/createaccbar" />

    <TextView
        android:id="@+id/Reset_pwd_text"
        android:layout_width="261dp"
        android:layout_height="63dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Reset Password"
        android:textColor="@color/colorsignupbackground"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.313"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/forget_pwd_new_pwd_text"
        android:layout_width="265dp"
        android:layout_height="61dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Enter a new Password"
        android:textSize="22dp"
        android:textColorHint="@color/colorsignupbackground"
        app:layout_constraintBottom_toBottomOf="@+id/forget_pwd_new_pwd"
        app:layout_constraintEnd_toEndOf="@+id/forget_pwd_new_pwd"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="@+id/forget_pwd_new_pwd"
        app:layout_constraintTop_toTopOf="@+id/forget_pwd_new_pwd"
        app:layout_constraintVertical_bias="0.71" />

    <EditText
        android:id="@+id/forget_pwd_conform_new_pwd_text"
        android:layout_width="269dp"
        android:layout_height="66dp"
        android:hint="Conform Password"
        android:textColorHint="@color/colorsignupbackground"
        android:textSize="22dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="@+id/forget_pwd_conform_new_pwd"
        app:layout_constraintEnd_toEndOf="@+id/forget_pwd_conform_new_pwd"
        app:layout_constraintHorizontal_bias="0.547"
        app:layout_constraintStart_toStartOf="@+id/forget_pwd_conform_new_pwd"
        app:layout_constraintTop_toTopOf="@+id/forget_pwd_conform_new_pwd"
        app:layout_constraintVertical_bias="0.59" />

    <Button
        android:id="@+id/reset_pwd_button"
        android:layout_width="229dp"
        android:layout_height="78dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/signinbutton"
        android:text="Reset Password"
        android:textColor="@color/colorloginbackground"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.445"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forget_pwd_conform_new_pwd"
        app:layout_constraintVertical_bias="0.251" />
</android.support.constraint.ConstraintLayout>